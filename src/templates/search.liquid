<div class="container">
  <center>
    <p>
      {% if search.performed %}
        {% if search.results_count == 0 %}
          {{ 'general.search.no_results_html' | t: terms: search.terms }}
        {% else %}
          {{ 'general.search.results_for_html' | t: terms: search.terms }}
        {% endif %}
      {% else %}
        {{ 'general.search.title' | t }}
      {% endif %}
    </p>

    <form action="/search" method="get" role="search">
      <label for="Search" class="label-hidden">
        {{ 'general.search.placeholder' | t }}
      </label>
      <input type="search"
             name="q"
             id="Search"
             value="{{ search.terms | escape }}"
             placeholder="{{ 'general.search.placeholder' | t }}">
      <input type="hidden" name="type" value="product">
      <button type="submit" class="btn">
        {% include 'icon-search' %}
        <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
      </button>
    </form>
  </center>
  <br>
{% if search.performed %}
<div class="row">
    {% for item in search.results %}
      <div class="four columns card">
        {% assign featured_image = item.image | default: item.featured_image %}
        {% if featured_image != blank %}
          <div class="img-holder">{{ featured_image | img_url: 'large' | img_tag: featured_image.alt }}</div>
        {% endif %}

        <p>{{ item.title }}</p>

        {% if item.object_type == 'product' %}
          <p>
            {% if item.compare_at_price > item.price %}
              {% if item.price_varies %}
                {% assign sale_price = item.price | money %}
                {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
              {% else %}
                {{ 'products.product.on_sale' | t }}
                <span itemprop="price">{{ item.price | money }}</span>
              {% endif %}
              <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
              <s>{{ item.compare_at_price | money }}</s>
            {% else %}
              {% if item.price_varies %}
                {% assign price = item.price | money %}
                <span itemprop="price">{{ 'products.product.from_text_html' | t: price: price }}</span>
              {% else %}
                <span itemprop="price">{{ item.price | money }}</span>
              {% endif %}
            {% endif %}
            {% unless item.available %}
            {{ 'products.product.sold_out' | t }}
            {% endunless %}
          </p>
        {% else %}
          <p>{{ item.content | strip_html | truncatewords: 50 }}</p>
        {% endif %}
        <div class="card-review">
          <div class="yotpo bottomLine"
            data-appkey="fbmH9DfgEkBOedaUXJPqVXkjETHSVPEnANuHcFc9"
            data-domain="{{shop.permanent_domain | escape }}"
            data-product-id="{{ item.id }}"
            data-product-models="{{ item.id }}"
            data-name="{{ item.title | escape }}"
            data-url="{{ shop.url }}{{ product.url }}"
            data-image-url="{{ item.featured_image | product_img_url: 'large' |replace: '?', '%3F' | replace: '&','%26'}}"
            data-description="{{ item.description | escape }}"
            data-bread-crumbs="{% for tag in item.tags %}{{ tag | escape }};{% endfor %}">
          </div>
        </div>
        <a href="{{ item.url | within: collection }}" title="{{ item.title | escape }}" class="more-info-button">More Info</a>
      </div>
    {% endfor %}
    </div>
</div>
{% endif %}
